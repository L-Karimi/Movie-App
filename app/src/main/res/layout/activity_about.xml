<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ima"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallview2"
    android:foreground="@drawable/wallview2"
    tools:context="com.moringaschool.wallview.ui.MoviesActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#232222"
        android:backgroundTint="#4C219A"
        android:scaleType="centerInside"
        android:src="@drawable/imagee1"
        app:srcCompat="@drawable/wallview2"
        tools:srcCompat="@drawable/wallview2" />

    <TextView
        android:id="@+id/genresTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="About WallView.This is an application that gives the user acces to various genres of movies in this platform. "
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#F60606"
        android:textSize="30sp" />


</RelativeLayout>